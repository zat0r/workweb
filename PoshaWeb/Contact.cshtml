@{
    Layout = "Layout.cshtml";
    Page.Title = "تواصل معنا";
    Page.Name = "تواصل معنا";
    Page.contact = "active";
}
<div id="fh5co-contact">
    <div class="container">
        <div class="row rtl text-righr">
            <div class="col-md-4 animate-box">

                <div class="fh5co-contact-info">
                    <h3>معلومات التواصل</h3>
                    <ul class="rtl">
                        <li class="address">الرياض <br> طريق عمر بن عبد العزيز الفرعي ,11417</li>
                        <li class="icon-mail">ص.ب 27326 الرياض 11417</li>
                        <li class="phone"><a href="tel://0112301455">+966 1123 014 55</a></li>
                        <li class="email"><a href="mailto:info@poshasaudi.com">info@poshasaudi.com</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-7 animate-box">
                <h3>لنكن على تواصل</h3>
                <form action="post">
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label for="fname">الأسم الأول</label>
                            <input type="text" id="fname" class="form-control" placeholder="الأسم الأول">
                        </div>
                        <div class="col-md-6">
                            <label for="lname">الأسم الأخير</label>
                            <input type="text" id="lname" class="form-control" placeholder="الأسم الأخير">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="email">البريد الألكتروني</label>
                            <input type="text" id="email" class="form-control" placeholder="ضع بريدك الألكتروني هنا">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="subject">العنوان</label>
                            <input type="text" id="subject" class="form-control" placeholder="عنوان الرسالة">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="message">الرسالة</label>
                            <textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="ضع رسالتك أو سؤالك مما لايقل عن 10 أحرف "></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="إرسال" class="btn btn-lg btn-primary">
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
